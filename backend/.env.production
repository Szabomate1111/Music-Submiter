# Production Environment Configuration
# Copy this file to .env and fill in the real values

# Backend Configuration
PORT=3005

# Database Configuration (Production)
DB_HOST=localhost
DB_USER=spotify_user
DB_PASSWORD=your_secure_database_password_here
DB_NAME=spotify_search_prod

# Spotify API Configuration (Production)
SPOTIFY_CLIENT_ID=your_production_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_production_spotify_client_secret

# Admin Configuration (Production)
# Change these to secure passwords!
MATE_PASSWORD=your_secure_owner_password_here
DOK_PASSWORD=your_secure_admin_password_here

# JWT Secret (MUST be changed for production!)
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_characters_long

# Optional: Node Environment
NODE_ENV=production